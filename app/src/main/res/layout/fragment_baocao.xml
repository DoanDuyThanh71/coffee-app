<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaoCaoFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ToolbarBaoCao"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF44475A"
        app:title="BÁO CÁO"
        app:titleTextColor="#FFFFFF">
    </androidx.appcompat.widget.Toolbar>
    <ExpandableListView
        android:listSelector="@color/blue"
        android:childDivider="@color/black"
        android:layout_below="@+id/ToolbarBaoCao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ExpListView_BaoCao"/>

</RelativeLayout>